{% extends 'layout.njk' %}
{% block content %}


<!-- Page Content -->
<div class="container">
        <hr>
        <hr>
        <!-- Content Row -->
        <div class="row">
            <!-- Map Column -->
            <div class="col-md-8">
                <!-- Embedded Google Map -->
                <!--iframe width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=37.0625,-95.677068&amp;spn=56.506174,79.013672&amp;t=m&amp;z=4&amp;output=embed"></iframe-->
                <iframe src="https://maps.google.com/maps?q=19.487992,+-99.133744+(Mapa)&amp;t=m&amp;z=16&amp;iwloc=A&amp;output=embed" frameborder="0" style="border:1;width:100%;height:400px;"></iframe>
            </div>
            <!-- Contact Details Column -->
            <div class="col-md-4">
                <h3>Nuestra direcion</h3>
                <p>
                   Av. Instituto Politécnico Nacional 1679<br>Piso 3 Interior 6,<br>Col. Lindavista, Gustavo A. Madero
                </p>
                <p><i class="fa fa-phone"></i>
                    <abbr title="Phone">Telefono</abbr>: (55) 6277-1902</p><p><i class="fa fa-phone"></i><abbr title="Phone">Telefono 2</abbr>: (55) 76931070</p>
                <p><i class="fa fa-envelope-o"></i>
                    <abbr title="Email">Correo electrónico</abbr>: <a href="mailto:contacto@mextech.com.mx">contacto@mextexh.com.mx</a>
                </p>
                <p><i class="fa fa-clock-o"></i>
                    <abbr title="Hours">Horarios</abbr>: Lunes - Sabado: 9:00 AM a 5:00 PM</p>

            </div>
        </div>
        <!-- /.row -->

        <!-- Contact Form -->
        <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <h3>Dudas o comentarios</h3>
                <form name="sentMessage" id="contactForm" novalidate>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Nombre completo:</label>
                            <input type="text" class="form-control" id="name" required data-validation-required-message="Please enter your name.">
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Número telefónico:</label>
                            <input type="tel" class="form-control" id="phone" required data-validation-required-message="Please enter your phone number.">
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Correo electrónico:</label>
                            <input type="email" class="form-control" id="email" required data-validation-required-message="Please enter your email address.">
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Mensaje:</label>
                            <textarea rows="10" cols="100" class="form-control" id="content" required data-validation-required-message="Please enter your message" maxlength="999" style="resize:none"></textarea>
                        </div>
                    </div>
                    <div id="success"></div>
                    <!-- For success/fail messages -->
                    <button type="button" id="send_email"class="btn btn-primary">Enviar Mensaje</button>
                    <br></br>
                    <span id="message"></span>
                </form>
            </div>

        </div>
        <!-- /.row -->

      </div>
      <!-- /.container -->

      <script>
        $(document).ready(function(){
            var from,to,subject,text;
              $("#send_email").click(function(){

                  email=$("#email").val();
                  name=$("#name").val();
                  message=$("#content").val();
                  phone=$("#phone").val();

              $("#message").text("Enviando el correo electrónico . . .");

              $.post("../contact/send/mail",{email:email,name:name,phone:phone,message:message},function(data){
                    if(data=="sent"){
                        $("#message").empty().html("El correo electrónico ha sido enviado correctamente, en breve tendras una respuesta de nuestro equipo.");
                        }
                  });
          });
      });
      </script>


{% endblock %}
